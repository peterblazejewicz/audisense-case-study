<UserControl x:Class="AudiSense.Wpf.Controls.HearingTestsList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource AudiSense.Background}" 
                BorderBrush="{StaticResource AudiSense.Border}" 
                BorderThickness="0,0,0,1" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🔊" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Hearing Tests" Style="{StaticResource AudiSense.SubheaderText}" 
                               VerticalAlignment="Center" Margin="0"/>
                    <TextBlock Text="{Binding HearingTests.Count, StringFormat=({0})}" 
                               Style="{StaticResource AudiSense.CaptionText}" 
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🔄 Refresh" 
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource AudiSense.SecondaryButton}" 
                            Margin="0,0,8,0"/>
                    <Button Content="➕ New Test" 
                            Command="{Binding NewHearingTestCommand}"
                            Style="{StaticResource AudiSense.SuccessButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Loading State -->
                <Border Background="White" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Padding="32">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="Loading hearing tests..." Style="{StaticResource AudiSense.BodyText}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Empty State -->
                <Border Background="White" Padding="32"
                        Visibility="{Binding Path=HearingTests.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🔊" FontSize="72" HorizontalAlignment="Center" 
                                   Margin="0,0,0,16" Foreground="{StaticResource AudiSense.Secondary}"/>
                        <TextBlock Text="No hearing tests found" Style="{StaticResource AudiSense.SubheaderText}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Start by creating your first hearing test" Style="{StaticResource AudiSense.BodyText}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,24" 
                                   Foreground="{StaticResource AudiSense.Text.Secondary}"/>
                        <Button Content="Create First Test" 
                                Command="{Binding NewHearingTestCommand}"
                                Style="{StaticResource AudiSense.PrimaryButton}"/>
                    </StackPanel>
                </Border>

                <!-- Hearing Tests List -->
                <ItemsControl ItemsSource="{Binding HearingTests}" Margin="16">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource AudiSense.Card}" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding TesterName}" 
                                                       Style="{StaticResource AudiSense.SubheaderText}" 
                                                       Margin="0,0,0,4"/>
                                            <TextBlock Grid.Column="1" Text="{Binding DaysAgo}"
                                                       Style="{StaticResource AudiSense.CaptionText}"/>
                                        </Grid>

                                        <TextBlock Text="{Binding DateConductedFormatted}" 
                                                   Style="{StaticResource AudiSense.CaptionText}" 
                                                   Margin="0,0,0,8"/>

                                        <TextBlock Text="{Binding ResultPreview}" 
                                                   Style="{StaticResource AudiSense.BodyText}" 
                                                   TextWrapping="Wrap"
                                                   MaxHeight="60"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                                        <Button Content="✏️ Edit" ToolTip="Edit"
                                                Command="{Binding DataContext.EditHearingTestCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource AudiSense.SecondaryButton}" 
                                                Margin="5"/>
                                        <Button Margin="5" Content="🗑️ Delete" ToolTip="Delete"
                                                Command="{Binding DataContext.DeleteHearingTestCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource AudiSense.WarningButton}" 
                                   />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
