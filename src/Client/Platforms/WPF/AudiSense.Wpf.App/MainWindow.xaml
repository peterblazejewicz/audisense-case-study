<Window x:Class="AudiSense.Wpf.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudiSense.Wpf.App"
        mc:Ignorable="d"
        Title="AudiSense - Audio and Hearing Management"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen">
    
    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="{StaticResource AudiSense.Primary}" Height="64">
            <Border.Effect>
                <DropShadowEffect Color="#B0BEC5" BlurRadius="4" ShadowDepth="2" Direction="270" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0">
                    <Border Background="{StaticResource AudiSense.Surface}" 
                            CornerRadius="20" Width="40" Height="40" 
                            Margin="0,0,16,0">
                        <TextBlock Text="ðŸŽ§" FontSize="20" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="AudiSense" FontSize="22" FontWeight="SemiBold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Professional Hearing Management" FontSize="12" 
                                   Foreground="White" Opacity="0.8" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Height="25" Background="#FFF5F5F5">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready" Foreground="#FF424242"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="TimeText" Text="" Foreground="#FF424242"/>
            </StatusBarItem>
        </StatusBar>
        
        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Panel -->
            <Border Grid.Column="0" Style="{StaticResource AudiSense.NavigationPanel}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Navigation" Style="{StaticResource AudiSense.SubheaderText}" 
                                   Margin="0,0,0,20" Foreground="{StaticResource AudiSense.Text.Primary}"/>
                                             
                        <Button x:Name="HearingTestButton" Content="ðŸ”Š Hearing Tests" 
                                Style="{StaticResource AudiSense.NavigationButton}" 
                                Click="HearingTestButton_Click"/>
                                                
                        <Border Height="1" Background="{StaticResource AudiSense.Border}" 
                                Margin="0,20,0,20"/>
                        
                        <TextBlock Text="Quick Actions" Style="{StaticResource AudiSense.CaptionText}" 
                                   Margin="8,0,8,12" FontWeight="SemiBold"/>

                        <Button Content="âž• New Test" Style="{StaticResource AudiSense.PrimaryButton}" 
                                HorizontalAlignment="Stretch" Click="NewTestButton_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#FFE0E0E0"/>
            
            <!-- Content Area -->
            <Border Grid.Column="2" Background="{StaticResource AudiSense.Background}">
                <ContentControl x:Name="ContentFrame">
                    <!-- Dynamic content will be loaded here -->
                </ContentControl>
            </Border>
        </Grid>
    </DockPanel>
</Window>
